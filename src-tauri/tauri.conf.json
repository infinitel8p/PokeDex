{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "PokeDex",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": [
          "$RESOURCE/*"
        ]
      }
    },
    "windows": [
      {
        "title": "PokeDex",
        "width": 500,
        "height": 900,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "visible": false,
        "center": true,
        "transparent": false
      },
      {
        "width": 500,
        "height": 900,
        "decorations": false,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "center": true,
        "transparent": false,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.InfiniteL8p.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "assets/*"
      ]
    }
  }
}